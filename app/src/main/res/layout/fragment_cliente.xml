<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_backgroundActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_cliente"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_foto_cliente"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_cliente" />

            <EditText
                android:id="@+id/et_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_firstItem_linearLayout"
                android:hint="@string/nombre"
                android:textColor="@color/color_font_blanco"
                android:textColorHint="@color/color_font_blanco" />

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_item_linearLayout"
                android:hint="@string/pass_ci"
                android:textColor="@color/color_font_blanco"
                android:textColorHint="@color/color_font_blanco" />

            <EditText
                android:id="@+id/et_origenPais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_item_linearLayout"
                android:hint="@string/origen_pais"
                android:textColor="@color/color_font_blanco"
                android:textColorHint="@color/color_font_blanco" />

            <EditText
                android:id="@+id/et_origenCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_item_linearLayout"
                android:hint="@string/origen_ciudad"
                android:textColor="@color/color_font_blanco"
                android:textColorHint="@color/color_font_blanco" />

            <EditText
                android:id="@+id/et_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_item_linearLayout"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/dob"
                android:textColor="@color/color_font_blanco"
                android:textColorHint="@color/color_font_blanco" />


            <TextView
                android:id="@+id/tv_preferencias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:text="@string/preferencias"
                android:textColor="@color/link"
                android:textSize="@dimen/tvSize" />

            <EditText
                android:id="@+id/et_preferencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/color_font_blanco" />

            <TextView
                android:id="@+id/tv_limitaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="false"
                android:text="@string/limitaciones"
                android:textColor="@color/link"
                android:textSize="@dimen/tvSize" />

            <EditText
                android:id="@+id/et_limitaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/color_font_blanco" />

            <TextView
                android:id="@+id/tv_obs_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:text="@string/obs"
                android:textColor="@color/link"
                android:textSize="@dimen/tvSize" />

            <EditText
                android:id="@+id/et_obs_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/color_font_blanco" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_btn_bottomLinearLayout"
        android:background="@drawable/mi_btn_background"
        android:elevation="5dp"
        android:shadowRadius="10"
        android:text="@string/registrar"
        android:textColor="@color/color_font_blanco"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>




