<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_backgroundActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_activar_recordatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recordatorio_estancia_futuro"
                    android:textColor="@color/link"
                    android:textSize="@dimen/tvSize"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/explicacion_recordatorio_estancia"
                    android:textColor="@color/color_font_blanco" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_check_recordatorios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_check" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cuantos_dias_antelacion"
                    android:textColor="@color/color_font_blanco" />

                <EditText
                    android:id="@+id/et_dias_antelacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:hint="0"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/color_font_blanco"
                    android:textColorHint="@color/color_font_blanco" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/agregar_recordatorio"
            android:textColor="@color/link"
            android:textSize="@dimen/tvSize"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_fecha_nuevo_recordatorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/seleccionar_fecha"
                android:textColor="@color/color_font_blanco"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btn_agregar_recordatorio"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/et_msj_recordatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/escriba_mensaje"
            android:textColor="@color/color_font_blanco"
            android:textColorHint="@color/color_font_blanco" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/compartir"
            android:textColor="@color/link"
            android:textSize="@dimen/tvSize"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/layout_enviar_por_defecto_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/enviar_por_defecto_a"
                android:textColor="@color/color_font_blanco" />

            <ImageView
                android:id="@+id/iv_check_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_check" />

        </RelativeLayout>

        <EditText
            android:id="@+id/et_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/escribir_aqui_mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/color_font_blanco"
            android:textColorHint="@color/color_font_blanco" />


    </LinearLayout>


</ScrollView>