<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBtnRegular">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/marginTop_btn_bottomLinearLayout</item>
        <item name="android:background">@drawable/mi_btn_background</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColor">@color/color_font_blanco</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="my_searchview">
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <style name="my_fab_add">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ic_add</item>
    </style>

    <style name="MySeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/marginSeparator</item>
        <item name="android:layout_marginBottom">@dimen/marginSeparator</item>
    </style>

</resources>
